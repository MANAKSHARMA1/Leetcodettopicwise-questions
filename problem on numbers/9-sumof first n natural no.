(for other methods)

#include<bits/stdc++.h>
using namespace std;
 
int main(){
    int n,sum=0;
    cout<<"enter no."<<endl;
    cin>>n;
    for(int i = 1; i<=n ;i++){
        sum=sum+i;
        
    }
cout<<"ans is "<<sum;
    return 0;
}
