#include <iostream>

using namespace std;
int i;
void print(int ans[], int n){
    for(i=0;i<n;i++)
{
    cout<<ans[i]<<" ";
}
    
}
void reverse(int arr[] , int n){
    
    int ans[n],i;
    for ( i = n - 1; i >= 0; i--) {
      ans[n - i - 1] = arr[i];
   }
 print (ans,n);
 
}
int main()
{
    int n=5,i;
    int arr[]={4,3,5,1,9};
    reverse(arr,n);
    
    //  for( int i = 0; i<n;i++){
    //      cout<<arr[i];
    //  }

    return 0;
}
