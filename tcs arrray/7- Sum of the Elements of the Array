#include<bits/stdc++.h>
using namespace std;

int main()
 {   
  int n ,i,a[10],sum =0;
  cout<<"enter no  of elements in array ";
  cin>>n;
  cout<<" enter elements ";
   for( i=0;i<n; i++){
  cin>>a[i];
   }
  for( i=0;i<n; i++)

    {
       sum = sum + a[i];
    }
 cout<<"ans is  "<<sum<<endl;
       
	return 0;
}


