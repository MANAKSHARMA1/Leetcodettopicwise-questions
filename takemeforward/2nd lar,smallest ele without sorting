#include<bits/stdc++.h>
using namespace std;


int main()
{
  int arr[]= {8,3,6,1,4};
  int n=5;
  sort(arr,arr+n);
  
  for(int i=0;i<n;i++){
      cout<<arr[i];
  }
  cout<<endl;
  cout<<"2nd largest is : "<<arr[n-2]<<endl;
    cout<<"2nd smallest is :"<<arr[1];

    return 0;
}
